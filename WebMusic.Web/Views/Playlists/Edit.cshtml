@model WebMusic.Web.ViewModels.Playlists.PlaylistEditViewModel
@{
    ViewData["Title"] = "Chỉnh sửa playlist";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa playlist: @Model.PlaylistName
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="PlaylistId" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />
                    <input asp-for="SongCount" type="hidden" />
                    <input asp-for="UserName" type="hidden" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="PlaylistName" class="form-label"></label>
                        <input asp-for="PlaylistName" class="form-control" placeholder="Nhập tên playlist..." />
                        <span asp-validation-for="PlaylistName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả playlist..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPublic" class="form-check-label">
                                Công khai playlist
                            </label>
                        </div>
                        <div class="form-text">Playlist công khai sẽ hiển thị cho tất cả người dùng</div>
                    </div>

                    <!-- Statistics -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Thống kê</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="text-primary">
                                        <i class="fas fa-music fa-2x mb-2"></i>
                                        <div class="fw-bold fs-4">@Model.SongCount</div>
                                        <small class="text-muted">Số bài hát</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-success">
                                        <i class="fas fa-user fa-2x mb-2"></i>
                                        <div class="fw-bold fs-6">@Model.UserName</div>
                                        <small class="text-muted">Người tạo</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="text-warning">
                                        <i class="fas fa-calendar fa-2x mb-2"></i>
                                        <div class="fw-bold fs-6">@Model.CreatedAt.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">Ngày tạo</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.PlaylistId" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Cập nhật
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
