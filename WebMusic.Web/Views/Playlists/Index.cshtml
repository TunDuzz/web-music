@model WebMusic.Web.ViewModels.Playlists.PlaylistListViewModel
@{
    ViewData["Title"] = "Danh sách playlist";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list me-2"></i>Danh sách playlist</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Thêm playlist mới
    </a>
</div>

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Tìm kiếm và lọc</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="SearchTerm" class="form-label">Từ khóa tìm kiếm</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Nhập tên playlist..." />
                </div>
                <div class="col-md-3">
                    <label asp-for="IsPublic" class="form-label">Trạng thái</label>
                    <select asp-for="IsPublic" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="true">Công khai</option>
                        <option value="false">Riêng tư</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="UserId" class="form-label">Người tạo</label>
                    <select asp-for="UserId" class="form-select">
                        <option value="">Tất cả</option>
                        <!-- TODO: Load users from ViewBag -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search me-1"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Page" value="1" />
            <input type="hidden" asp-for="PageSize" />
            <input type="hidden" asp-for="SortBy" />
            <input type="hidden" asp-for="SortDirection" />
        </form>
    </div>
</div>

<!-- Playlists Grid -->
@if (Model.Playlists.Any())
{
    <div class="row">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 150px; background: linear-gradient(45deg, #007bff, #6f42c1);">
                        <i class="fas fa-list fa-3x text-white"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@playlist.PlaylistName</h5>
                        <p class="card-text text-muted">
                            <i class="fas fa-user me-1"></i>@(playlist.UserName ?? "Unknown")
                        </p>
                        @if (!string.IsNullOrEmpty(playlist.Description))
                        {
                            <p class="card-text small">@(playlist.Description.Length > 100 ? playlist.Description.Substring(0, 100) + "..." : playlist.Description)</p>
                        }
                        <div class="mt-auto">
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Số bài hát</small>
                                    <div class="fw-bold">@playlist.SongCount</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Trạng thái</small>
                                    <div class="fw-bold">
                                        <span class="badge bg-@(playlist.IsPublic ? "success" : "secondary")">
                                            @(playlist.IsPublic ? "Công khai" : "Riêng tư")
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@playlist.PlaylistId" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@playlist.PlaylistId" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit me-1"></i>Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@playlist.PlaylistId" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Xóa
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>@playlist.CreatedAt.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Playlists pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.Page - 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-userId="@Model.UserId"
                       asp-route-isPublic="@Model.IsPublic"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDirection="@Model.SortDirection">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                
                @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-page="@i"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-userId="@Model.UserId"
                           asp-route-isPublic="@Model.IsPublic"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-sortDirection="@Model.SortDirection">
                            @i
                        </a>
                    </li>
                }
                
                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.Page + 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-userId="@Model.UserId"
                       asp-route-isPublic="@Model.IsPublic"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDirection="@Model.SortDirection">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }

    <!-- Results Info -->
    <div class="text-center text-muted">
        Hiển thị @((Model.Page - 1) * Model.PageSize + 1) - @(Math.Min(Model.Page * Model.PageSize, Model.TotalCount)) 
        trong tổng số @Model.TotalCount playlist
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-list fa-5x text-muted mb-3"></i>
        <h4 class="text-muted">Không tìm thấy playlist nào</h4>
        <p class="text-muted">Hãy thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Thêm playlist đầu tiên
        </a>
    </div>
}
