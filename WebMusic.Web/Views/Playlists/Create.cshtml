@model WebMusic.Web.ViewModels.Playlists.PlaylistCreateViewModel
@{
    ViewData["Title"] = "Tạo playlist mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Tạo playlist mới
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="PlaylistName" class="form-label"></label>
                        <input asp-for="PlaylistName" class="form-control" placeholder="Nhập tên playlist..." />
                        <span asp-validation-for="PlaylistName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả playlist..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPublic" class="form-check-label">
                                Công khai playlist
                            </label>
                        </div>
                        <div class="form-text">Playlist công khai sẽ hiển thị cho tất cả người dùng</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Tạo playlist
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
