@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <i class="fas fa-ban text-danger" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h1 class="card-title text-danger mb-3">Truy cập bị từ chối</h1>
                    
                    <p class="card-text fs-5 mb-4">
                        Xin lỗi, bạn không có quyền truy cập vào trang này.
                    </p>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Thông báo:</strong> Tài khoản <strong>@ViewBag.UserName</strong> không có quyền truy cập tài nguyên này.
                    </div>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Profile" class="btn btn-primary">
                            <i class="fas fa-user me-1"></i>Xem Profile
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i>Trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
