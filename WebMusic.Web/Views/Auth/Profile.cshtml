@model WebMusic.Web.ViewModels.Auth.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-user me-2"></i>Thông tin cá nhân
                </h2>
                <div>
                    <a asp-action="EditProfile" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-1"></i>Chỉnh sửa
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                        <i class="fas fa-key me-1"></i>Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle mb-3" width="150" height="150" style="object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mb-3 mx-auto" style="width: 150px; height: 150px; font-size: 4rem;">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                    
                    <h4 class="card-title">@Model.DisplayName</h4>
                    <p class="text-muted">@Model.Email</p>
                    
                    <div class="mt-3">
                        <span class="badge bg-@(Model.IsActive ? "success" : "danger") fs-6">
                            @(Model.IsActive ? "Hoạt động" : "Bị khóa")
                        </span>
                        <span class="badge bg-info ms-2 fs-6">@Model.Role</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Chi tiết thông tin
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tên đăng nhập:</label>
                                <p class="form-control-plaintext">@Model.UserName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">
                                    @Model.Email
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span class="badge bg-success ms-2">
                                            <i class="fas fa-check me-1"></i>Đã xác thực
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Chưa xác thực
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Họ tên:</label>
                                <p class="form-control-plaintext">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ngày sinh:</label>
                                <p class="form-control-plaintext">
                                    @(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tiểu sử:</label>
                        <p class="form-control-plaintext">
                            @(string.IsNullOrEmpty(Model.Bio) ? "Chưa cập nhật" : Model.Bio)
                        </p>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ngày tạo tài khoản:</label>
                                <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Đăng nhập cuối:</label>
                                <p class="form-control-plaintext">
                                    @(Model.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Cập nhật cuối:</label>
                            <p class="form-control-plaintext">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
